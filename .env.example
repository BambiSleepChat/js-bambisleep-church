# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Security
SESSION_SECRET=your-session-secret-change-this
JWT_SECRET=your-jwt-secret-change-this

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# FFmpeg Configuration
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe
VIDEO_STORAGE_PATH=/mnt/f/bambisleep-church/videos
VIDEO_SIGNING_KEY=your-video-signing-secret
MAX_VIDEO_SIZE_MB=500
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv,webm

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/bambisleep

# MCP Server Configuration (Model Context Protocol)
# GitHub Integration (for MCP server-github)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here

# Stripe Payment Processing (for MCP server-stripe)
# Uses STRIPE_SECRET_KEY configured above

# HuggingFace AI/ML Models (for MCP server-huggingface)
HUGGINGFACE_HUB_TOKEN=hf_your_huggingface_token_here

# Azure Quantum Computing (for MCP server-azure-quantum)
AZURE_QUANTUM_WORKSPACE_ID=your_workspace_id_here
AZURE_QUANTUM_SUBSCRIPTION_ID=your_subscription_id_here
AZURE_QUANTUM_RESOURCE_GROUP=your_resource_group_here
AZURE_QUANTUM_LOCATION=your_location_here

# Microsoft Clarity Analytics (for MCP server-microsoft-clarity)
CLARITY_PROJECT_ID=your_clarity_project_id_here

# Custom MCP Servers (Layer 2 - Advanced)
# Paths to custom MCP server implementations from bambisleep-chat-catgirl
ENABLE_HYPNOSIS_MCP=true
ENABLE_PERSONALITY_MCP=true
ENABLE_TRIGGER_SYSTEM_MCP=true
ENABLE_ANALYTICS_MCP=true

# Optional: Override default MCP server paths
# HYPNOSIS_MCP_PATH=/path/to/bambisleep-chat-catgirl/mcp-servers/bambisleep-hypnosis-mcp/index.js
# PERSONALITY_MCP_PATH=/path/to/bambisleep-chat-catgirl/mcp-servers/aigf-personality-mcp/index.js
# TRIGGER_SYSTEM_MCP_PATH=/path/to/bambisleep-chat-catgirl/mcp-servers/trigger-system-mcp/index.js
# ANALYTICS_MCP_PATH=/path/to/bambisleep-chat-catgirl/mcp-servers/chat-analytics-mcp/index.js

# Audio file storage (for bambisleep-hypnosis-mcp)
BAMBISLEEP_AUDIO_PATH=/mnt/f/bambisleep-church/audio

# Content
CONTENT_PATH=/mnt/f/bambisleep-church/content
