    </div>
  </header>

  <main class="sanctuary-main container">
    <div class="video-container-wrapper">
      <div id="video-container" class="hellfire-video-frame">
        <video id="video-player" class="aristocratic-player" controls>
          <source id="video-source" type="video/mp4">
          Your browser does not support the video tag.
        </video>

        <div id="avatar-overlay" class="avatar-overlay bottom-right">
          <canvas id="avatar-canvas" width="200" height="200"></canvas>
        </div>
      </div>

      <div class="video-controls-panel">
        <h3>Video: <%= videoId %></h3>
        <p class="subscription-notice">
          Premium content - Subscription active until: 
          <%= new Date(subscription.current_period_end * 1000).toLocaleDateString() %>
        </p>
        <div id="video-status" class="status-display"></div>
      </div>
    </div>

    <div id="ws-status" class="ws-status"></div>
  </main>

