{
  "dashboard": {
    "title": "BambiSleep Church - Authentication & Security",
    "tags": [
      "security",
      "authentication",
      "monitoring"
    ],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Authentication Success Rate",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(auth_attempts_total{outcome=\"success\"}[5m]) / rate(auth_attempts_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 70,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Sessions",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "auth_sessions_active",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "blue"
                },
                {
                  "value": 50,
                  "color": "green"
                },
                {
                  "value": 100,
                  "color": "yellow"
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Security Events (Last 5min)",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(increase(security_events_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 10,
                  "color": "yellow"
                },
                {
                  "value": 50,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Rate Limit Hits (Last 5min)",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(increase(rate_limit_hits_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 20,
                  "color": "yellow"
                },
                {
                  "value": 100,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Authentication Attempts by Outcome",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 6
        },
        "targets": [
          {
            "expr": "sum(rate(auth_attempts_total{outcome=\"success\"}[5m])) by (method)",
            "legendFormat": "Success - {{method}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(auth_attempts_total{outcome=\"failed\"}[5m])) by (method)",
            "legendFormat": "Failed - {{method}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Attempts/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Security Events by Severity",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 6
        },
        "targets": [
          {
            "expr": "sum(rate(security_events_total{severity=\"critical\"}[5m]))",
            "legendFormat": "Critical",
            "refId": "A"
          },
          {
            "expr": "sum(rate(security_events_total{severity=\"high\"}[5m]))",
            "legendFormat": "High",
            "refId": "B"
          },
          {
            "expr": "sum(rate(security_events_total{severity=\"medium\"}[5m]))",
            "legendFormat": "Medium",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Events/sec"
          },
          {
            "format": "short"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [
                  5
                ],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": [
                  "A",
                  "5m",
                  "now"
                ]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "30s",
          "handler": 1,
          "name": "Critical Security Events Alert",
          "noDataState": "no_data"
        }
      },
      {
        "id": 7,
        "title": "Security Event Types (Last Hour)",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 14
        },
        "targets": [
          {
            "expr": "sum(increase(security_events_total[1h])) by (event_type)",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "display": true,
            "placement": "right"
          }
        }
      },
      {
        "id": 8,
        "title": "User Registrations (24h)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 14
        },
        "targets": [
          {
            "expr": "increase(user_registrations_total[1h])",
            "legendFormat": "Registrations",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Users"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 9,
        "title": "Rate Limit Hits Trend",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 14
        },
        "targets": [
          {
            "expr": "sum(rate(rate_limit_hits_total[5m])) by (route)",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Hits/sec"
          },
          {
            "format": "short"
          }
        ]
      }
    ]
  }
}