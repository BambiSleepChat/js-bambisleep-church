{
  "name": "@bambisleepchat/bambisleep-church",
  "version": "1.0.0",
  "description": "BambiSleep™ Church MCP Control Tower - Model Context Protocol server management and orchestration",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js --watch src --ext js,ejs",
    "build": "npm run lint && npm run test",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --verbose",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch --coverage",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --maxWorkers=2",
    "start": "NODE_ENV=production node src/server.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"public/**/*.{js,css}\" \"views/**/*.ejs\"",
    "format:check": "prettier --check \"src/**/*.js\" \"public/**/*.{js,css}\" \"views/**/*.ejs\"",
    "docker:build": "docker build -t bambisleep-church:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "health": "curl http://localhost:3000/health",
    "clean": "rm -rf node_modules coverage dist",
    "reinstall": "npm run clean && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BambiSleepChat/bambisleep-church.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "control-tower",
    "bambisleep",
    "server-management",
    "websocket",
    "stripe",
    "express"
  ],
  "author": "BambiSleepChat Organization",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BambiSleepChat/bambisleep-church/issues"
  },
  "homepage": "https://github.com/BambiSleepChat/bambisleep-church#readme",
  "organization": {
    "name": "BambiSleepChat",
    "trademark": "BambiSleep™ is a trademark of BambiSleepChat",
    "url": "https://github.com/BambiSleepChat"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@eslint/js": "^9.9.1",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 70,
        "functions": 80,
        "lines": 80
      }
    },
    "coverageReporters": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "testMatch": [
      "**/src/**/*.test.js",
      "**/tests/**/*.test.js"
    ],
    "transform": {}
  }
}